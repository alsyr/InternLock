<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Personal Information"
        android:id="@+id/textView7"
        android:textColor="#ffffffff"
        android:background="#91020202"
        android:gravity="center_horizontal"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills ( Separate by commas)"
        android:id="@+id/textView13"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="518dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="Enter here"
        android:layout_gravity="center"
        android:textColor="#94090909" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="504dp"
        android:layout_height="wrap_content"
        android:id="@+id/major"
        android:text="Enter here"
        android:layout_gravity="center"
        android:textColor="#94090909" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interests (Separate by commas)"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="15"
        android:id="@+id/gpa"
        android:text="Enter here"
        android:layout_marginLeft="45dp"
        android:textColor="#94090909" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Link to Internbound/Linkedln/Facebook"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:textColor="#ff000000" />
    <EditText
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="15"
        android:id="@+id/linkIntern"
        android:text="Enter here"
        android:layout_marginLeft="45dp"
        android:textColor="#94090909" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/buttonBack"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignRight="@+id/textView10"
            android:layout_weight="0.12" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/buttonNext"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/m"
            android:layout_toRightOf="@+id/back"
            android:layout_weight="0.10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip this step"
            android:id="@+id/buttonSkip"
            android:layout_weight="0.18" />


    </LinearLayout>




</LinearLayout>
