<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Account"
        android:textColor="#ffffffff"
        android:background="#91020202"
        android:gravity="center_horizontal"
        android:autoText="false"
        android:id="@+id/textView14" />

    <EditText
        android:id="@+id/frontEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username"
        android:layout_alignRight="@+id/username"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" @"
        android:id="@+id/aaa"
        android:textColor="#ff000000"
        android:layout_above="@+id/username"
        android:layout_alignRight="@+id/textView10" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:ems="5"
        android:id="@+id/backEmail"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView14"
        android:layout_toRightOf="@+id/email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:layout_alignBottom="@+id/username"
        android:layout_alignLeft="@+id/email"
        android:id="@+id/textView9"
        android:textColor="#ff000000" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:ems="10"
        android:id="@+id/username"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/email"
        android:layout_toRightOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password has to be between 8-16 characters"
        android:textSize="10dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_marginTop="38dp"
        android:id="@+id/textView10"
        android:textColor="#ff000000" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/password"
        android:layout_alignLeft="@+id/textView10"
        android:textColor="#ff000000" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/username"
        android:layout_below="@+id/textView10"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/backEmail"
        android:ems="12"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password: "
        android:layout_alignBottom="@+id/confirmPassword"
        android:layout_alignLeft="@+id/textView11"
        android:id="@+id/textView12"
        android:textColor="#ff000000" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:ems="12"
        android:text="" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/back"
            android:text="Back" />

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Home " />
    </LinearLayout>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/backEmail"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:text="Email: "
        android:textColor="#ff000000" />

</RelativeLayout>
